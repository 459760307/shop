/* pages/product_list/product_list.wxss */

.li .item {
  height: 254rpx;
  padding-top: 10rpx;
  overflow: hidden;
  border-bottom: 1rpx solid #f8f8f8;
}

.li .pic {
  padding: 20rpx;
  float: left;
  height: 240rpx;
  width: 240rpx;
  background: no-repeat center center / 100% auto;
  background-origin: content-box;
}

.li .content {
  width: 510rpx;
  line-height: 40rpx;
  padding: 0 20rpx 16rpx 20rpx;
  color: #333;
  font-size: 10pt;
  float: left;
}

.li .name {
  height: 76rpx;
  margin-top: 16rpx;
  word-wrap: break-word;
  word-break: break-all;
}

.li .price {
  padding-top: 30rpx;
  color: #e93b3d;
}

.li .symbol {
  display: inline-block;
  font-size: 7pt;
}

.pro_filter {
  height: 80rpx;
  border-bottom: 1rpx solid #f8f8f8;
}

.pro_filter_items {
  padding: 16rpx 0;
  display: flex;
  justify-content: space-between;
}

.pro_filter_items .item {
  padding: 0 20rpx;
  font-size: 10pt;
  flex: 1;
  text-align: center;
}

.item_options {
  display: none;
  background: #fff;
}

.item_options .selection {
  height: 100vh;
  background: rgba(0, 0, 0, 0.4);
  position: relative;
  z-index: 1000;
}

.selection .J_ping {
  line-height: 90rpx;
  background: #fff;
  height: 90rpx;
  font-size: 10pt;
  padding: 0 70rpx 0 40rpx;
}

.J_ping.active {
  color: #e93b3d;
}
