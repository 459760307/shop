.header {
  color: #fff;
  height: 100rpx;
   background: #e12c35; 
  display: flex;
  align-items: center;
  font-size: 28rpx;
  padding: 0 20rpx;
}

.header-search-form {
  width: 100%;
  height: 100rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10000;
  /* background: #fff; */
  /* border-bottom: 1rpx solid #eee; */
  padding: 0 20rpx 0 140rpx;
}

.header-search-box {
  margin-right: 20rpx;
  margin-top: 20rpx;
  height: 60rpx;
}

.header-search-input {
  border-radius: 30rpx;
  height: 60rpx;
  background: #f7f7f7;
  font-size: 24rpx;
  line-height: 60rpx;
  display: flex;
}

.header-icon-fdj {
  width: 36rpx;
  height: 30rpx;
  background-position: -80px 0;
  background-size: 200px;
  margin-left: 20rpx;
}

.hilight2 {
  font-size: 24rpx;
  color: #888;
  padding-left: 10rpx;
}
.category-list{
  padding:8rpx 0 36rpx 0;
  height:324rpx;
  display: flex;
  flex-wrap: wrap;
}
.category-item{
  width:150rpx;
  height: 140rpx;
  /* background:#000; */
  display: flex;
  align-items: flex-end;
  padding-bottom:10rpx;
  border:1rpx solid black;
  justify-content: center;
  color:#000;
  font-size:24rpx;
}
